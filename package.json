{
  "name": "windowsegments-polyfill",
  "version": "1.0.3",
  "description": "Polyfill for JavaScript Window Segments",
  "module": "build/windowsegments-polyfill.js",
  "main": "build/windowsegments-polyfill.js",
  "type": "module",
  "directories": {
    "example": "examples"
  },
  "files": [
    "!/demo/",
    "!/images/",
    "!/src/",
    "!/docs/"
  ],
  "scripts": {
    "build": "microbundle -f es -o build/",
    "dev": "concurrently serve \"microbundle watch -f es\"",
    "generate-docs": "jsdoc -d docs/ src/index.js README.md"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/foldable-devices/windowsegments-polyfill.git"
  },
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/foldable-devices/windowsegments-polyfill/issues"
  },
  "homepage": "https://github.com/foldable-devices/windowsegments-polyfill#readme",
  "devDependencies": {
    "concurrently": "^5.2.0",
    "microbundle": "^0.12.3",
    "serve": "^11.3.2",
    "jsdoc": "^3.6.4"
  }
}
